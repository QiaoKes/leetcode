//多注意边界值 2147483647
class Solution {
public:
    int mySqrt(int x) {
        if(x == 0 || x == 1) return x;
        int left = 0;
        int right = x/2+1;
        while(left < right){
            int mid = left + (right-left)/2;
            //防止溢出
            if(mid < x/mid) left = mid + 1;
            else right = mid;
        }
        //判断是否取的是下界
        return left <= (double)x/left ? left : left-1;
    }
};
